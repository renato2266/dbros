
<h1>Listing names</h1>

<%= form_tag names_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :cognome_nome => nil %>
<% end %>





<table>
  <thead>
    <tr>
      <th>Cognome nome</th>
      <th>Luogo nascita</th>
      <th>Data nascita</th>
      <th>Residenza</th>
      <th>Cittadinanza</th>
      <th>Ambit crim.</th>
      <th>Area crim.</th>
      <th>Ass. crim</th>
      <th>Foto</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= name.cognome_nome %></td>
        <td><%= name.luogo_nascita %></td>
        <td><%= name.data_nascita %></td>
        <td><%= name.residenza %></td>
        <td><%= name.cittadinanza %></td>
		<%if name.ambit.nil?%>
		<td>Nil!</td>
		<%else%>
        <td><%= name.ambit.ambito_criminale %></td>
		<%end%>
		<%if name.area.nil?%>
		<td>Nil!</td>
		<%else%>
        <td><%= name.area.area_criminale %></td>
		<%end%>
		<%if name.group.nil?%>
		<td>Nil!</td>
		<%else%>
		<td><%= name.group.gruppo_criminale %></td>
		<%end%>
		
		<td><%= image_tag name.photo.url(:thumb) %></td>
        <td><%= link_to 'Show', name %></td>
        <td><%= link_to 'Edit', edit_name_path(name) %></td>
        <td><%= link_to 'Destroy', name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
